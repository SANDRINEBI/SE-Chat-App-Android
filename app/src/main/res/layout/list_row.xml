<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="70dp">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dot"
        android:src="@drawable/circledot"
        android:layout_marginStart="3dp"
        android:layout_gravity="center_vertical" />

    <ImageView
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:id="@+id/propic"
        android:src="@mipmap/ic_launcher"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="15dp"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="3dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name Of Chat"
        android:id="@+id/chatName"
        android:layout_gravity="start|top"
        android:layout_marginStart="90dp"
        android:layout_marginTop="15dp"
        android:textColor="#000000"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Most recent Message"
        android:id="@+id/lastMessage"
        android:layout_gravity="start|center_vertical"
        android:layout_marginStart="90dp"
        android:layout_marginTop="10dp"
        android:textColor="#000000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5h 20m ago"
        android:id="@+id/timeSinceMessage"
        android:layout_gravity="end|center_vertical"
        android:textColor="#ff0000"
        android:textSize="12sp"
        android:layout_marginBottom="5dp"
        android:layout_marginEnd="10dp" />

</FrameLayout>